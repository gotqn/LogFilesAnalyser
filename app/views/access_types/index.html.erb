<h1>Listing access_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_types.each do |access_type| %>
      <tr>
        <td><%= access_type.name %></td>
        <td><%= access_type.description %></td>
        <td><%= link_to 'Show', access_type %></td>
        <td><%= link_to 'Edit', edit_access_type_path(access_type) %></td>
        <td><%= link_to 'Destroy', access_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Access type', new_access_type_path %>
